<div id='#game'>
  <div>
    <div>You joined Game <%= @game.high_score.id %> as a <%= @user.type %></div>
    <div>You are currently: <b><span id='status'></span></b>
  </div>
  
  <div id='message-container'>
    <div id='message-log'>
    </div>
  </div>

  <div id='controls'>
    <div id='left-tab' class='selected tab'><%= @user.type == 'Grandpa' ? "View Computer" : "View Manual" %></div>
    <div id='right-tab'class='tab'>Talk on Phone</div>
  </div>

  <div id='main'>
  </div>

  <div id='builder' class='hidden'>
    <form id="message-builder">
      <div id='message-block'></div>
      <button>Submit</button>
    </form>

    <div id='word-list'>
      <h4>WORD LIST:</h4>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  App.connect_to_game('<%=@user.type%>', <%=@user.id%>)
<% end %>
