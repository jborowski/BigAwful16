<div id='#game'>
  <div>
    <div>You joined Game <%= @game.high_score.id %> as a <%= @user.type %></div>
    <div>You are currently: <b><span id='status'></span></b>
  </div>
  
  <div id='message-container'>
    <div id='message-log'>
    </div>
  </div>

  <div id='controls'>
    <% if @user.type == 'Grandson' %>
      <div id='main-tab' class='selected tab' data-section='#main'>
        Read Instructions
      </div>
      <div id='monitor-tab' class='tab' data-section='#monitor'>
        View Monitors
      </div>
      <div id='tower-tab' class='tab' data-section='#tower'>
        View Towers
      </div>
    <% else %>
      <div id='main-tab' class='selected tab' data-section='#main'>
        View Computer
      </div>
    <% end %>
    <div id='builder-tab'class='tab' data-section='#builder'>Talk on Phone</div>
  </div>

  <div id='main' class='section'>
    <% if @user.type == 'Grandson' %>
      <%= render partial: 'manual' %>
    <% else %>
      <div class='client-placeholder'>
        For your own safety, you will not be able to touch your computer until you have successfully contacted your Grandson.
      </div>
    <% end %>
  </div>

  <div id='monitor' class='hidden section'>
    <div class='client-placeholder'>
      Catalog will not be available unless Grandpa needs your help.
    </div>
  </div>

  <div id='tower' class='hidden section'>
    <div class='client-placeholder'>
      Catalog will not be available unless Grandpa needs your help.
    </div>
  </div>

  <div id='builder' class='hidden section'>
    <div class='hidden header'>
      <h3>Speak on Phone</h3>
      <form id="message-builder">
        <div id='message-block'></div>
        <button>Submit</button>
      </form>
    </div>

    <div class='client-placeholder'>
      You cannot speak on the phone until you have someone to speak to, but if that happens, here is what you can say.
    </div>

    <div id='word-list'>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  App.connect_to_game('<%=@user.type%>', <%=@user.id%>, <%=@user.difficulty%>)
<% end %>
