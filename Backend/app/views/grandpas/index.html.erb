<p id="notice"><%= notice %></p>

<h1>Grandpas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grandpas.each do |grandpa| %>
      <tr>
        <td><%= link_to 'Show', grandpa %></td>
        <td><%= link_to 'Edit', edit_grandpa_path(grandpa) %></td>
        <td><%= link_to 'Destroy', grandpa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

